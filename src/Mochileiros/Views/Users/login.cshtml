@model Mochileiros.Models.User


@{
    ViewData["Title"] = "Mochileiros";
    Layout="~/Views/Shared/Newuser/_Layout.cshtml";
}


<div class="title">
    <img src="/mochila.png" alt="Mochileiros Logo">
    <h1 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Mochileiros</h1>
</div>

<div class="button-group">
   <a href="/users/create"><button>Criar conta</button></a>
   
</div>

<div class="container">
   <a href="Create"><h2>Criar Conta</h2></a> 
   <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Acessar" class="btn btn-success" />
            </div>
        </form>
</div>


<script>
    
    function populateDays() {
        var daySelect = document.getElementById("day");
       
        daySelect.innerHTML = "";
        
        for (var i = 1; i <= 31; i++) {
            var option = document.createElement("option");
            option.value = i;
            option.text = i;
            daySelect.appendChild(option);
        }
    }

    
    function populateYears() {
        var yearSelect = document.getElementById("year");
       
        yearSelect.innerHTML = "";
       
        for (var i = 1940; i <= 2024; i++) {
            var option = document.createElement("option");
            option.value = i;
            option.text = i;
            yearSelect.appendChild(option);
        }
    }
</script>
